[sqlfluff]
# SQL Linting Configuration for sqllinting project
dialect = oracle
max_line_length = 100
indent_unit = space
indent_size = 4
runaway_limit = 10
ignore_templated_sections = true
large_file_skip_cache = False
nocolor = False
verbose = False
output_line_length = 80

[sqlfluff:indentation]
indent_size = 4
tab_space_size = 4
use_tabs = false
implicit_indents = allow
indent_first_newline = true
template_indent_first_newline = false

[sqlfluff:dialect:oracle]
max_line_length = 100
indent_unit = space

# Rule-specific configurations
[sqlfluff:rules:L001]
# Indentation

[sqlfluff:rules:L002]
# Missing whitespace

[sqlfluff:rules:L003]
# Unnecessary whitespace

[sqlfluff:rules:L010]
# Keywords should be uppercase
capitalisation_policy = upper

[sqlfluff:rules:L013]
# Column references should be lowercase
capitalisation_policy = lower

[sqlfluff:rules:L020]
# Functions should be lowercase
capitalisation_policy = lower

[sqlfluff:rules:L030]
# Missing WHERE clause - DISABLED for PL/SQL blocks
select_clause_trailing_comma = forbid

[sqlfluff:rules:L031]
# Unused using clause

[sqlfluff:rules:L054]
# Excessive CTEs
max_cte_count = 3

[sqlfluff:rules:L018]
# Line length
tab_space_size = 4

[sqlfluff:rules:L019]
# Comma spacing
select_clause_trailing_comma = forbid

