[sqlfluff]
# SQL Linting Configuration for sqllinting project
dialect = oracle
max_line_length = 100
indent_unit = space
indent_size = 4
runaway_limit = 10
ignore_templated_sections = true

[sqlfluff:indentation]
indent_size = 4
tab_space_size = 4
use_tabs = false
implicit_indents = allow

[sqlfluff:dialect:oracle]
max_line_length = 100
indent_unit = space
